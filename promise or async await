    <script type="text/javascript">
        function vinothpromise(){
             return new Promise((resolve,reject)=>{
                    setTimeout(()=>{
                        let msg=false;  // false
                        if(msg===true)
                        resolve("success message");
                        else
                       reject("failure message");
                    },4000)
            });
        }
        // promise : way 1
        /*
        vinothpromise().then((data)=>{
            console.log(data )
        }).catch((err)=>{
            console.error(err);
        })*/

        // async / await : way2
        async function vinothasync()
        {
            try{
                let data=await vinothpromise();
                console.log(data)
            }
            catch(err){
                console.error(err)
            }
        }
    

    </script>
</head>
<body>
    <button onclick="vinothasync()">clickme</button> 
    
</body>

	<script type="text/javascript">
		var mark,res="";
		function fun1()
		{
			mark=document.getElementById("m1").value;
			if(mark>=75)
			res="very good";
			else if(mark>=65)
			res="very excellent";	
			else if(mark>=50)
			res="very super";	
			else
			res="very bad";				

		document.getElementById("deva").innerHTML=res;
		}

	</script>
</head>

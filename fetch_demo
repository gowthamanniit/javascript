<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript">
        function show()
        {
            var cname=document.getElementById("city").value;
            var api=`https://api.openweathermap.org/data/2.5/weather?q=${cname}&appid=dc00b20e5f6cedffbd73d7827c6332e2`;

//            document.getElementById("res").innerHTML=api;

        fetch(api)
        .then((response)=>response.json())
        .then((data)=>{
            console.log(data);
            document.getElementById("res1").innerHTML=data.weather[0].main;
            document.getElementById("res2").innerHTML=data.weather[0].description;
            document.getElementById("res3").innerHTML=data.wind.speed;
            document.getElementById("res4").innerHTML=data.main.temp;
            document.getElementById("res5").innerHTML=data.main.humidity;
            
        })
        .catch((err)=>{
            console.log(""+err);
            document.getElementById("sid").style.display="none";
            document.getElementById("res7").innerHTML="City Not Found";
        })
        }
        </script>
        <style type="text/css">
            body
            {
                background-image: url("./images/weather2.jfif");
                background-size: cover;
            }
            h3
            {
                background-color: cyan;
                border-radius: 25px;
                border:5px solid orange;
                font-size: 15px;
            }
            #author
            {
                color: red;
            }
            #sid
            {
                text-align: left;
                background-color: lightgreen;
                width: 65%;
                border-radius: 10px;
                padding: 10px;
                box-shadow: 5px 5px 5px 1px gray;
                opacity: .6;
            }
        </style>
